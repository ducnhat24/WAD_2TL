<div class="order">
    <div class="order__header">
        <h2>Order Details</h2>
    </div>

    <div class="order__body">
        <div class="order__summary">
            <div class="order__customer__detail">
                <h3>Customer Details</h3>
                <div class="order__customer__detail__content">
                    <div class="order__customer__detail__item">
                        <span>Name:</span>
                        <span>Bui Dinh Gia Vy</span>
                    </div>
                    <div class="order__customer__detail__item">
                        <span>Phone:</span>
                        <span>0123456789</span>
                    </div>
                    <div class="order__customer__detail__item">
                        <span>Address:</span>
                        <span>9 St, Cu Chi district, Ho Chi Minh city</span>
                    </div>
                </div>
            </div>

            <div class="order__products__detail">
                <h3>Products Details</h3>
                <div class="order__products__list">
                    {{#each products}}
                    <div class="order__item">
                        <div class="order__item__name">
                            <span>{{this.name}}</span>
                        </div>
                        <div class="order__item__quantity">
                            <span>Quantity: {{this.quantity}}</span>
                        </div>
                        <div class="order__item__price">
                            <span>Price: ${{this.price}}</span>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="order__total">
            <h3>Order Summary</h3>
            <div class="order__total__content">
                <div class="order__total__item">
                    <span>Subtotal:</span>
                    <span>$100</span>
                </div>
                <div class="order__total__item">
                    <span>Shipping:</span>
                    <span>$10</span>
                </div>
                <div class="order__total__item">
                    <span>Total:</span>
                    <span>$110</span>
                </div>
            </div>
        </div>
    </div>

    <div class="order__footer">
        <div class="order__status">
            <h3>Status</h3>
            <span>Pending</span>
        </div>
        <div class="order__actions">
            <button class="custom_button">Cancel Order</button>
            <button class="custom_button">Contact Support</button>
        </div>
    </div>
</div>
