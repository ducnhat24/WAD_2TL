<div class="review">
  <div>
    <h2 id="reviewCars" class="review__header">WRITE A REVIEW</h2>
    <hr />
    <div class="review_box">
      <p>Your Rating:</p>
      <ul class="list" id="starList">
        <li><a><i class="fa fa-star"></i></a></li>
        <li><a><i class="fa fa-star"></i></a></li>
        <li><a><i class="fa fa-star"></i></a></li>
        <li><a><i class="fa fa-star"></i></a></li>
        <li><a><i class="fa fa-star"></i></a></li>
      </ul>
      <form
        class="row contact_form"
        action="/reviews"
        method="POST"
        id="reviewForm"
        novalidate="novalidate"
      >
        <input type="hidden" name="rating" id="ratingInput" value="0" />
        <div class="col-md-12">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Your Full Name"
              required
            />
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Email Address"
              required
            />
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <textarea
              class="form-control"
              name="comment"
              id="comment"
              rows="3"
              placeholder="Your Review"
              required
            ></textarea>
          </div>
        </div>
        <div class="col-md-12 text-right">
          <button type="submit" class="primary-btn">
            Add Review
          </button>
        </div>
      </form>
    </div>

  </div>
</div>

