  <div class="review__header">
    <h2 id="reviewCars">REVIEWS</h2>
    <hr />
  </div>
  <div class="review-section">
    <div class="row">
      <!-- Reviews Column -->
      <div class="col-lg-8 col-md-12 review-column">
        <div class="review">
          <div class="review__header">
            <div class="card-review"></div>
          </div>
        </div>
      </div>

      <!-- Review Form Column -->
    <div class="col-lg-4 col-md-12 form-column">
        <div class="review-form">
          <h2>Write a Review</h2>
          <form id="reviewForm" class="review-form__container">
            <!-- Ratings -->
            <div class="form-group">
              <label for="rating">Your Rating:</label>
              <div class="rating-stars">
                <input type="radio" id="star5" name="rating" value="5" />
                <label for="star5" title="5 stars">★</label>
                <input type="radio" id="star4" name="rating" value="4" />
                <label for="star4" title="4 stars">★</label>
                <input type="radio" id="star3" name="rating" value="3" />
                <label for="star3" title="3 stars">★</label>
                <input type="radio" id="star2" name="rating" value="2" />
                <label for="star2" title="2 stars">★</label>
                <input type="radio" id="star1" name="rating" value="1" />
                <label for="star1" title="1 star">★</label>
              </div>
            </div>

            <!-- Comment -->
            <div class="form-group">
              <label for="comment">Your Comment:</label>
              <textarea id="comment" class="form-control" rows="5" placeholder="Write your review here..."></textarea>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit Review</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>



