<div class="order">
    <div class="order__header">
        <h2>Order</h2>
    </div>

    <div class="order__body">
        <div class="order__feature">
            <div class="order__feature__left">
                <div class="order__feature__item">
                    <div class="order__feature__icon">
                        <i class="fa-solid fa-filter"></i>
                    </div>
                    <select name="" id="">
                        <option value="" selected disabled>Sort</option>
                        <option value="id">ID</option>
                        <option value="creation-time">Creation Time</option>
                        <option value="price">Price</option>
                    </select>
                </div>
                <div class="order__feature__item">
                    <div class="order__feature__icon">
                        <i class="fa-solid fa-sort"></i>
                    </div>
                    <select name="" id="">
                        <option value="" selected disabled>Status</option>
                        <option value="pending">Pending</option>
                        <option value="success">Success</option>
                        <option value="shipped">Shipped</option>

                        <option value="completed">Completed</option>
                        <option value="cancel">Cancel</option>
                    </select>
                </div>
            </div>

            <div class="order__feature__right">
                <div class="order__feature__item">
                    <input type="text" placeholder="Search">
                    <div class="order__feature__icon">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="order__table">
            <div class="order__table__header">
                <div class="order__table__items">
                    <div class="order__table__item">ID</div>
                    <div class="order__table__item">Num of products</div>
                    <div class="order__table__item">Total price</div>
                    <div class="order__table__item">Creation Time</div>
                    <div class="order__table__item">
                        <div class="order__table__item__status"></div>
                    </div>
                </div>
            </div>

            <div class="order__table__data">
                <div class="order__table__items">
                    <div class="order__table__item">Empty</div>
                    <div class="order__table__item">Empty</div>
                    <div class="order__table__item">Empty</div>
                    <div class="order__table__item">Empty</div>
                    <div class="order__table__item">
                        <div class="order__table__item__status"></div>
                    </div>
                </div>
            </div>
            <div class="order__table__footer">
                <div class="order__table__number" id="order__count">0</div>
                </div>

                <div class="order__table__button">
                    <button>
                        <i class="fa-solid fa-arrow-left"></i>
                    </button>
                    <button>
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/apps/order.js"></script>
