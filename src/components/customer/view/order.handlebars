<div class="order">
    <div class="order__header" id="first_selection">
        <h2>Order Details</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8 order__customer_details">
            </div>
            <div class="col-md-4 order__header">
                <div class="order__count">
                </div>
            </div>
        </div>
    </div>

    <div class="order__shipping">
        <h3>Shipping Details</h3>
        <form id="shipping-form">
            <div class="form-group">
                <label for="address">Shipping Address</label>
                <input type="text" id="address" name="address" class="form-control" placeholder="Enter your address" required>
            </div>

            <div class="form-group">
                <label for="shipping-method">Shipping Method</label>
                <select id="shipping-method" name="shippingMethod" class="form-control" required>
                    <!-- Options sẽ được render từ database -->
                </select>
            </div>

            <button type="submit" class="custom_button">Submit Shipping Info</button>
        </form>
    </div>

    <div class="order__footer">
        <div class="order__status">
            <h3>Order Status</h3>
            <span id="order-status">Pending</span>
        </div>

        <div class="order__actions">
            <button class="custom_button">Cancel Order</button>
            <button class="custom_button">Contact Support</button>
        </div>
    </div>

    <div class="order__header">
        <h3>Order review</h3>
    </div>
    <div class="order__product_list">

    </div>


</div>

<script src="/apps/order.js"></script>