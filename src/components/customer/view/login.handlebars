<div class="method__container">
  <div class="method">
    <div class="container">
      <div class="row text-center">
        <div class="col-lg-6">
          <div class="method__form">
            <div class="method__form__title">
              <span>Login to your account</span>
              <p>Get your car by LOGIN to your account now</p>
            </div>
            <div class="method__form__input">
              <i class="fa-solid fa-user"></i>
              <input type="text" id="login__useraccount" placeholder="Username">
            </div>
            <div class="method__form__input">
              <i class="fa-solid fa-lock"></i>
              <input type="password" id="login__password" placeholder="Password">
            </div>
            <div class="method__form__button">
              <button onclick="javascript:handleSubmitLogin()">Login</button>
            </div>
            <div class="method__form__signup mt-3">
              <span>Don't have an account? <a href="/customer/signup">Signup</a></span>
            </div>
            <div class="method__form__oauth mt-4">
              <hr>
              <p>Or login with</p>
              <div class="d-flex justify-content-center gap-3">
                <button class="btn btn-danger" onclick="handleGoogleLogin()">
                  <i class="fa-brands fa-google"></i> Login with Google
                </button>
              </div>
            </div>
            <div class="method__form__forgot mt-4">
              <a href="#" id="forgotPasswordLink">Forgot Password?</a>
            </div>
          </div>
        </div>

        <div class="col-lg-6 method__image method--login">
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Popup for Forgot Password -->
<div class="popup-overlay" id="popupOverlay"></div>
<div class="popup" id="forgotPasswordPopup">
  <h5>Forgot Password</h5>
  <div id="stepEmail">
    <p>Enter your email address to reset your password.</p>
    <input type="email" id="emailInput" class="form-control mb-2" placeholder="Enter your email">
    <button class="btn btn-primary" id="sendOtpButton">Send OTP</button>
  </div>
  <div id="stepOtp" style="display: none;">
    <p>Enter the OTP sent to your email.</p>
    <input type="text" id="otpInput" class="form-control mb-2" placeholder="Enter OTP">
    <button class="btn btn-primary" id="verifyOtpButton">Verify OTP</button>
  </div>
  <div id="stepResetPassword" style="display: none;">
    <p>Set your new password.</p>
    <input type="password" id="newPassword" class="form-control mb-2" placeholder="New Password">
    <input type="password" id="confirmPassword" class="form-control mb-2" placeholder="Confirm Password">
    <button class="btn btn-primary" id="resetPasswordButton">Reset Password</button>
  </div>
  <button class="btn btn-secondary mt-3" id="closePopupButton">Close</button>
</div>

<script src="/apps/login.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
